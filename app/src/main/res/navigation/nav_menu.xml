<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_menu"
    app:startDestination="@id/navigation_list">

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.zeinabmallaki.mosacen_alfoad.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_aboutActivity"
            app:destination="@id/navigation_about" />
    </fragment>
    <fragment
        android:id="@+id/navigation_about"
        android:name="com.zeinabmallaki.mosacen_alfoad.fragment.AboutFragment"
        android:label="AboutFragment">
        <action
            android:id="@+id/action_aboutActivity_to_settingFragment"
            app:destination="@id/navigation_setting" />
    </fragment>
    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.zeinabmallaki.mosacen_alfoad.fragment.SettingFragment"
        android:label="SettingFragment" />
</navigation>